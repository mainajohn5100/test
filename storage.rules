rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authorized users to upload ticket attachments.
    // A more secure rule would check if the user belongs to the ticket's organization.
    match /ticket-attachments/{ticketId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Allow logos to be read publicly and written by authenticated users.
    // A more secure rule would restrict writes to organization admins.
    match /org-logos/{orgId}/{allPaths=**} {
       allow read;
       allow write: if request.auth != null;
    }
    
    // Allow avatars to be read publicly and written only by the user who owns them.
    match /avatars/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
