rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allows users to read and write their own profile data.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for notifications
    match /notifications/{notificationId} {
      // Any authenticated user can create a notification. This is necessary for
      // the app to create notifications for other users (e.g., assigning a ticket).
      allow create: if request.auth != null;

      // Users can only read, update (e.g., mark as read), or delete their own notifications.
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Rules for tickets and projects. For now, allow any authenticated user to read/write.
    // In a production app, you could add more granular rules here based on user roles.
    match /tickets/{ticketId} {
        allow read, write: if request.auth != null;
    }
    
    match /projects/{projectId} {
        allow read, write: if request.auth != null;
    }
  }
}
