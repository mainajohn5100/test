rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Allow authenticated users to read and write to their own avatar folder.
    match /avatars/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to upload ticket attachments.
    match /ticket-attachments/{ticketId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }

    // Allow any authenticated user to upload images to the editor's upload path.
    // The application code ensures files are placed in a user-specific subfolder.
    match /editor-uploads/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }
  }
}
