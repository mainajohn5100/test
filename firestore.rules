rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Read Permissions ---

    // Allow authenticated users to read the main data collections.
    // This is required for the dashboard, ticket lists, project lists, and user profiles.
    match /{collection}/{doc}
      where collection in ['users', 'tickets', 'projects'] {
      allow get, list: if request.auth != null;
    }

    // --- Write & Update Permissions ---

    // Users can only update their own profile.
    match /users/{userId} {
      // Note: 'create' is handled by the signup server-side logic,
      // so we only need to allow 'update' here.
      allow update: if request.auth.uid == userId;
    }

    // Any authenticated user can create or update tickets and projects.
    match /tickets/{ticketId} {
      allow create, update: if request.auth != null;
    }
    match /projects/{projectId} {
       allow create, update: if request.auth != null;
    }

    // --- Notification Permissions ---

    // Notifications are private to the user they are sent to.
    match /notifications/{notificationId} {
      // A user can only read or update their own notifications (e.g., mark as read).
      allow read, update: if request.auth != null && request.auth.uid == resource.data.userId;
      // Any authenticated user (e.g., a server action) can create notifications.
      allow create: if request.auth != null;
    }
  }
}
